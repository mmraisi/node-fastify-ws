{
  "name": "node-fastify-ws",
  "version": "0.0.0-semantically-released",
  "description": "NodeJS app utilizes Fastify webSockets",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Mahmoud Mraisi",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmraisi/node-fastify-ws"
  },
  "bugs": {
    "url": "https://github.com/mmraisi/node-fastify-ws/issues"
  },
  "scripts": {
    "lint": "eslint .",
    "start": "ts-node src/index.ts",
    "build": "rm -rf dist && tsc --build",
    "dev": "nodemon src/index.ts",
    "test": "glob -c 'tsx --test' 'test/unit/**/*.test.ts'",
    "test:unit:100": "glob -c 'c8 --100 --reporter html --reporter text tsx --test' 'test/unit/**/*.test.ts'",
    "test:ci": "npm run test:unit:100"
  },
  "license": "MIT",
  "dependencies": {
    "@dnlup/fastify-traps": "^3.0.2",
    "@fastify/autoload": "^5.8.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/websocket": "^10.0.1",
    "api-problem": "^9.0.2",
    "dotenv": "^16.4.5",
    "fastify": "^4.26.2",
    "http-status-codes": "^2.3.0"
  },
  "engines": {
    "node": ">=20"
  },
  "keywords": [
    "fastify",
    "node",
    "websocket"
  ],
  "files": [
    "dist"
  ],
  "devDependencies": {
    "sinon": "^17.0.1",
    "@semantic-release/github": "^10.0.3",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.12.11",
    "@types/sinon": "^17.0.3",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "c8": "^9.1.0",
    "eslint": "^8.57.0",
    "glob": "^10.3.12",
    "nodemon": "^3.1.0",
    "semantic-release": "^23.0.8",
    "tsx": "^4.7.2",
    "typescript": "^5.4.5"
  }
}
